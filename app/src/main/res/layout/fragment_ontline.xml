<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!-- Electricity -->

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/imageViewElectricityIcon"
                android:src="@drawable/ic_electricity"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/outline_kill_fgo"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_marginRight="20sp"
                android:layout_marginLeft="20sp"
                android:background="@drawable/electricity_bargraph_prototype"
                android:id="@+id/textViewElectricBarView"
                android:layout_below="@+id/imageViewElectricityIcon"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true" />

            <Button
                android:text="@string/outline_backup_fgo_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewElectricBarView"
                android:id="@+id/button_backup_account"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true" />

            <Button
                android:text="@string/outline_remove_fgo_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button_backup_account"
                android:id="@+id/button_remove_account"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true" />

            <Button
                android:text="@string/outline_refresh_fgo_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button_remove_account"
                android:id="@+id/button_refresh"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true" />

            <Button
                android:text="Test Josh Game"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button_refresh"
                android:id="@+id/button_test_game"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginTop="10dp"
                android:text="目前保存 0 個帳號"
                android:id="@+id/textViewAccountNum"
                android:textAlignment="center"
                android:layout_below="@+id/button_test_game"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginTop="10dp"
                android:text=" "
                android:id="@+id/textViewFGOInfo"
                android:textAlignment="center"
                android:layout_below="@+id/textViewAccountNum"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true" />



        </RelativeLayout>
    </ScrollView>
</LinearLayout>